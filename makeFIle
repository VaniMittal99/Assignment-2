CXX = g++
CXXFLAGS = -std=c++11

SRC = ques1_New.cpp
DEBUG_TARGET = debug_program
OPTIMIZED_TARGET = optimized_program

DEBUG_CXXFLAGS = -g -O0
OPTIMIZED_CXXFLAGS = -O2

all: $(DEBUG_TARGET) $(OPTIMIZED_TARGET)

$(DEBUG_TARGET): $(SRC)
	$(CXX) $(CXXFLAGS) $(DEBUG_CXXFLAGS) -o $(DEBUG_TARGET) $(SRC)

$(OPTIMIZED_TARGET): $(SRC)
	$(CXX) $(CXXFLAGS) $(OPTIMIZED_CXXFLAGS) -o $(OPTIMIZED_TARGET) $(SRC)

clean:
	rm -f $(DEBUG_TARGET) $(OPTIMIZED_TARGET)

.PHONY: clean
